flush: $(BUILD_DIR)/$(TARGET).bin
	openocd -f board/stm32f0discovery.cfg -c "program $^ reset exit 0x08000000"

erase:
	openocd -f board/stm32f0discovery.cfg -c "init; reset halt; stm32f0x mass_erase 0; exit"

